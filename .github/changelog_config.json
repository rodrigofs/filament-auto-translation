{
  "template": "## 🚀 What's Changed\n\n#{{CHANGELOG}}\n\n**Full Changelog**: https://github.com/${{OWNER}}/${{REPO}}/compare/${{FROM_TAG}}...${{TO_TAG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}}) @${{AUTHOR}}",
  "empty_template": "- No changes in this release",
  "categories": [
    {
      "title": "## ✨ Features",
      "labels": ["feature", "enhancement", "feat"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["fix", "bugfix", "bug"]
    },
    {
      "title": "## 🔧 Maintenance",
      "labels": ["maintenance", "chore", "dependencies"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## 🧪 Testing",
      "labels": ["test", "testing"]
    },
    {
      "title": "## ⚡ Performance",
      "labels": ["performance", "perf"]
    },
    {
      "title": "## 🔒 Security",
      "labels": ["security"]
    },
    {
      "title": "## 💥 Breaking Changes",
      "labels": ["breaking-change", "breaking"]
    },
    {
      "title": "## 🔄 Refactoring",
      "labels": ["refactor", "refactoring"]
    }
  ],
  "ignore_labels": [
    "ignore-for-release"
  ],
  "sort": {
    "order": "ASC",
    "on_property": "mergedAt"
  },
  "transformers": [
    {
      "pattern": "[\\-\\*] (\\[(...|TEST|CI)\\])( )?(.+)",
      "target": "- $4"
    }
  ],
  "max_tags_to_fetch": 200,
  "max_pull_requests": 1000,
  "max_back_track_time_days": 365,
  "exclude_merge_branches": [
    "main",
    "master",
    "dev",
    "develop",
    "release"
  ]
}